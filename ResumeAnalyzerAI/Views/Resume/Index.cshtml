@model ResumeAnalyzerAI.Models.ResumeInputModel
@{
    ViewData["Title"] = "Resume Analyzer AI";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="text-center mb-4">Resume Analyzer AI</h2>

    <div class="card p-4 mb-4 shadow">
        <form asp-action="Index" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Upload Resume (PDF/DOCX):</label>
                <input type="file" class="form-control" name="ResumeFile" accept=".pdf,.docx" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Paste Job Description:</label>
                <textarea class="form-control" name="JobDescription" rows="6" placeholder="Paste job description here..." required>@Model?.JobDescription</textarea>
            </div>
            <button type="submit" class="btn btn-primary w-100">Analyze</button>
        </form>
    </div>

    @if (Model?.AnalysisResult != null)
    {
        <div class="card p-4 shadow">
            <h4>Analysis Results</h4>
            <div class="mb-2">
                <label>Match Percentage:</label>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: @Model.AnalysisResult.MatchPercentage%" aria-valuenow="@Model.AnalysisResult.MatchPercentage" aria-valuemin="0" aria-valuemax="100">
                        @Model.AnalysisResult.MatchPercentage%
                    </div>
                </div>
            </div>
            <div class="mb-2">
                <label>Missing Skills:</label>
                <ul>
                    @foreach (var skill in Model.AnalysisResult.MissingSkills)
                    {
                        <li>@skill</li>
                    }
                </ul>
            </div>
            <div class="mb-2">
                <label>AI Suggestions:</label>
                <p>@Model.AnalysisResult.AISuggestions</p>
            </div>
        </div>
    }
</div>
